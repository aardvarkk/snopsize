<h2>Viewing snops for <%= @url %></h2>

<%= link_to "Snop about " + @url, new_snop_path(uri: @url)%></br></br>

<%# get all snops for this domain and resource combination %>
<% if @snops %>
  <div id="buttons">
    <div id="prev_button">
      <%= button_to "<", resource_show_snop_path(domain_id: @resource.domain.id, resource_id: @resource.id, snop: @prev, direction: "prev"), remote: true, disabled: @prev.nil? %>
    </div>
    <div id="next_button">
      <%= button_to ">", resource_show_snop_path(domain_id: @resource.domain.id, resource_id: @resource.id, snop: @next, direction: "next"), remote: true, disabled: @next.nil? %>
    </div>
  </div>
  <div id="snop">
	  <%= render :partial => "shared/snopfull" %>
  </div>
<% end %>
