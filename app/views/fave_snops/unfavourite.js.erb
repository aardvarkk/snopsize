$('#fave').html("<%=j render 'fave_snops/favourite' %>");

// IF we are on the CURRENT USER page, we have to update some partials
<% if URI(request.referrer).path == user_path(current_auth) %>
  // Update the left column 
  $('#left_column').html("<%=j render partial: 'users/categories_view', locals: {user: current_auth} %>");

  // If we unfaved someone elses snop, we should switch to showing another snop.
  <% unless @snop_to_show.nil? %>
    $('#right_column').html("<%=j render partial: 'shared/snop_browse', locals: {current_snop: @snop_to_show, snop_list: get_all_snops_for_user(current_auth), prev_button_path: user_path(id: current_auth.id, snop: snop_get_prev_in_list(@snop_to_show, get_all_snops_for_user(current_auth)), direction: 'prev'), next_button_path: user_path(id: current_auth.id, snop: snop_get_next_in_list(@snop_to_show, get_all_snops_for_user(current_auth)), direction: 'next')} %>");
  <% else %>
    $('#right_column').html("You don't have any snops yet!");    
  <% end %>
<% end %>

// Reload the social media buttons
reloadSocialMediaButtons();