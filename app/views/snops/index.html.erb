<h1>Listing snops</h1>

<table>
  <tr>
    <th>User</th>
    <th>Source</th>
    <th>Title</th>
    <th>Point1</th>
    <th>Point2</th>
    <th>Point3</th>
    <th>Summary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @snops.each do |snop| %>
  <tr>
  	<% user = User.find(snop.user_id)%>
    <td><%= user.username %></td>
    <td><%= snop.source %></td>
    <td><%= snop.title %></td>
    <td><%= snop.point1 %></td>
    <td><%= snop.point2 %></td>
    <td><%= snop.point3 %></td>
    <td><%= snop.summary %></td>
    <td><%= link_to 'Show', snop %></td>
    <td><%= link_to 'Edit', edit_snop_path(snop) %></td>
    <td><%= link_to 'Destroy', snop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

