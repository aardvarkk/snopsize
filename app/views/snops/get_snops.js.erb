<% if @snop_view %>
  $("#snops_view").html("<%=j render partial: 'shared/snop_browse', locals: {current_snop: @snop, snop_list: @snops, show_category: @show_category} %>");
  
  // Let's do a little animation
  <% if @direction == "next" %>
    animateSlideInFromRight('#snop')
  <% elsif @direction == "prev" %>
    animateSlideInFromLeft('#snop')
  <% end %>

  // Reload the social media buttons
  reloadSocialMediaButtons();  
<% else %>
  $("#snops_view").html("<%=j render partial: 'shared/snop_list_view', locals: {snops: @snops, show_category: @show_category} %>");
  reloadSnopsTable();
<% end %>
