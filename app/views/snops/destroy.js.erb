// Update the left column 
$('#left_column').html("<%=j render partial: 'users/categories_view', locals: {user: current_user} %>");

// If we unfaved someone elses snop, we should switch to showing another snop.
<% unless @snop_to_show.nil? %>
  $('#snops_view').html("<%=j render partial: 'shared/snop_browse', locals: {current_snop: @snop_to_show, snop_list: get_all_snops_for_user(current_auth), show_category: @show_category} %>");
<% else %>
  $('#snops_view').html("<%=j render partial: 'shared/snop_list_view', locals: {snops: get_all_snops_for_user(current_auth)} %>");    
  reloadSnopsTable();
<% end %>

// Reload the social media buttons
reloadSocialMediaButtons();