<% fieldsize = 30  %>
<% maxlen    = 256 %>

<%= form_for(@snop) do |f| %>
  <% if @snop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snop.errors.count, "error") %> prohibited this snop from being saved:</h2>

      <ul>
      <% @snop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :uri %><br />
    <%= f.text_field :uri, size: fieldsize, value: @default_uri %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, size: fieldsize, maxlength: maxlen %>
  </div>
  <div class="field">
    <%= f.label :point1 %><br />
    <%= f.text_field :point1, size: fieldsize, maxlength: maxlen %>
  </div>
  <div class="field">
    <%= f.label :point2 %><br />
    <%= f.text_field :point2, size: fieldsize, maxlength: maxlen %>
  </div>
  <div class="field">
    <%= f.label :point3 %><br />
    <%= f.text_field :point3, size: fieldsize, maxlength: maxlen %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_field :summary, size: fieldsize, maxlength: maxlen %>
  </div>
  <div class="field">
    <%= f.label :Category %><br />
    <span id="categories"><%= collection_select :user_category, :id, current_user.user_categories, :id, :name, :include_blank => (t :uncategorized) %></span>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<hr>

