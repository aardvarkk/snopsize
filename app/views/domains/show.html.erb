<h2 class="subtitle">Snops from <%= @domain.uri %></h2>

<%# Partial to switch between the Snop flow and list view %>
<%= render partial: 'shared/list_flow_buttons' %>

<%# The next/prev buttons %>
<%= render partial: 'shared/next_prev_buttons', locals: { browse_view: params[:browse_view] == "true" } %>

<%# The snop sidenav %>
<% content_for :sidenav do %>
  <%= render partial: 'shared/sidenav_snop_browse', locals: { current_snop: @snops.first, snop_list: @snops } %>
<% end %>

<%= render partial: 'shared/snop_all_views', locals: {snops: @snops, data_source: domain_path(id: @domain.id, format: "json")} %>

