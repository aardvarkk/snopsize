<h2>Snopped pages from <%= @domain.uri %></h2>

<% if @snops %>
  <div id="snops_list_view">
    <%= render partial: 'shared/snop_list_view', locals: {data_source: domain_path(id: @domain.id, format: "json")} %>
  </div>  
  <div id="snops_browse_view">
    <%= render partial: 'shared/snop_browse', locals: {current_snop: @snops.first, snop_list: @snops, close_path: domain_path} %>
  </div>
<% end %>