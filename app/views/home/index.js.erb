<% if @snop_view %>
  $("#snops_view").html("<%=j render partial: 'shared/snop_browse', locals: {current_snop: @snop, snop_list: @snops, return_path: root_path, prev_button_path: root_path(snop: snop_get_prev_in_list(@snop, @snops), direction: 'prev', snop_view: true), next_button_path: root_path(snop: snop_get_next_in_list(@snop, @snops), direction: 'next', snop_view: true)} %>");
  
  // Let's do a little animation
  <% if @direction == "next" %>
    animateSlideInFromRight('#snop')
  <% elsif @direction == "prev" %>
    animateSlideInFromLeft('#snop')
  <% end %>

  // Reload the social media buttons
  reloadSocialMediaButtons();  
<% else %>
  $("#snops_view").html("<%=j render partial: 'shared/snop_list_view', locals: {snops: @snops} %>");
  reloadSnopsTable();
<% end %>
