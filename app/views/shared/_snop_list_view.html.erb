<table id="snops" cellpadding="0" cellspacing="0" border="0" class="display" width="100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Domain</th>
      <th>Created</th>
      <% if show_category == true %>
      <th>Category</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% snops.each do |snop| %>
      <tr>
        <td><%= link_to snop.title, get_snops_path(snop: snop, snops: snops, snop_view: true, show_category: show_category), remote: true, method: :post %></td>
        <td><%= link_to snop.domain.uri, snop.domain %></td>
        <td><%= snop.created_at %></td>
        <% if show_category == true %>
        <td>Some Category</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>