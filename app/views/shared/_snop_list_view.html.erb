<table id="snops" cellpadding="0" cellspacing="0" border="0" class="display" width="100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Domain</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
    <% snops.each do |snop| %>
      <tr>
        <td><%= link_to snop.title, root_path(snop: snop), remote: true %></td>
        <td><%= link_to snop.domain.uri, snop.domain %></td>
        <td><%= snop.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>