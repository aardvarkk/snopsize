<%# Choose a class based on the browse view param %>
<% cls_snopflow = params[:browse_view] == 'true' ? 'snopflow' : 'snopflow off' %>
<% cls_listview = params[:browse_view] == 'false' ? 'listview' : 'listview off' %>

<% content_for :list_flow_buttons do %>
	<%= content_tag :li, link_to_function(t(:browse_view), 'changeToBrowseView()'), class: cls_snopflow %>
	<%= content_tag :li, link_to_function(t(:list_view), 'changeToListView()'), class: cls_listview %>
<% end %>