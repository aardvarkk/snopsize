<%# A snop browse view shows a full snop view %>
<%# current_snop = The snop to show %>
<%# snop_list = The snops to switch between %>

<%# Store the number of sonps we are going to display %>
<%= javascript_tag do %>
  num_snops = <%= snop_list.size %>
<% end %>

<%# A variable deciding whether to show this item %>
<% display = params[:browse_view] == 'false' ? 'none;' : 'block;' %>
<%= content_tag :div, id: 'snops_browse_view' do %>
	<%= content_tag :div, { id: 'snop_container', style: 'display: ' + display } do %>
	  <% snop_list.each do |snop| %>
			<% cls = (snop == current_snop) ? 'current' : 'hidden' %>
			<%= content_tag :div, { class: 'snop ' + cls, id: 'snop_' + snop.id.to_s } do %>
		      <%= render :partial => "shared/snopfull", locals: {snop: snop} %>
	    <% end %>
	  <% end %>
	<% end %>
<% end %>