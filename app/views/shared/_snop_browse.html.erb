<%# A snop browse view shows a full snop view along with buttons to switch between them %>
<%# current_snop = The snop to show %>
<%# snop_list = The snops to switch between %>
<%= link_to "Back to List View", close_path, remote: true %>

<div id="buttons">
  <div id="prev_button">
    <button id="prev" type="button">&lt</button>
  </div>
  
  <div id="next_button">
    <button id="next" type="button">&gt</button>
  </div>  
</div>

<div id="snop_container">
  <% snop_list.each do |snop| %>
    <% @class = (snop == current_snop) ? "current_snop" : "hidden_snops" %>

    <div id="<%= "snop_" + snop.id.to_s %>" class="<%= @class %>">
      <%= render :partial => "shared/snopfull", locals: {snop: snop} %>

      <%# Fave/Unfave Button %>
      <% if user_signed_in? %>
        <% @fave_btn_id = "fave_" + snop.id.to_s %>
        <div id="<%= @fave_btn_id %>">
          <% if has_user_faved_snop?(snop) %>
            <%= render partial: 'fave_snops/favourite', locals: {snop: snop} %>
          <% else %>
            <%= render partial: 'fave_snops/unfavourite', locals: {snop: snop} %>
          <% end %>
        </div>
      <% end %>

    </div>
  <% end %>
</div>