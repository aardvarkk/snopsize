<%# A snop full partial contains A snop view, as well as social media and the favourite button %>

<% unless snop.nil? %>

  <% if snop.deleted? %>
    This snop has been deleted
  <% else %>

    <p>
      <b>Title:</b>
      <%= snop.title %>
    </p>

    <p>
      <b>Point1:</b>
      <%= snop.point1 %>
    </p>

    <p>
      <b>Point2:</b>
      <%= snop.point2 %>
    </p>

    <p>
      <b>Point3:</b>
      <%= snop.point3 %>
    </p>

    <p>
      <b>Summary:</b>
      <%= snop.summary %>
    </p>

  <% end %>
<% end %>
