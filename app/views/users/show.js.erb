// Here we change which snop is being displayed
$('#snops_view').html("<%=j render partial: 'shared/snop_browse', locals: {current_snop: @snop, snop_list: @all_snops, prev_button_path: user_path(id: @user.id, snop: snop_get_prev_in_list(@snop, @all_snops), direction: 'prev'), next_button_path: user_path(id: @user.id, snop: snop_get_next_in_list(@snop, @all_snops), direction: 'next')} %>");

// Let's do a little animation
<% if @direction == "next" %>
  animateSlideInFromRight('#snop')
<% elsif @direction == "prev" %>
  animateSlideInFromLeft('#snop')
<% end %>

// Reload the social media buttons
reloadSocialMediaButtons();