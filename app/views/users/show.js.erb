// Here we change which snop is being displayed
$('#right_column').html("<%=j render partial: 'shared/snop_browse', locals: {current_snop: @snop, snop_list: @all_snops, prev_button_path: user_path(id: @user.id, snop: snop_get_prev_in_list(@snop, @all_snops), direction: 'prev'), next_button_path: user_path(id: @user.id, snop: snop_get_next_in_list(@snop, @all_snops), direction: 'next')} %>");

// Let's do a little animation
<% if @direction == "next" %>
  $('#snop').css({'margin-left':'100%'}).animate({'margin-left':'0'});
<% elsif @direction == "prev" %>
  $('#snop').css({'margin-left':'-50%'}).animate({'margin-left':'0'});
<% end %>

